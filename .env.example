# Config path (optional). Defaults: ./config.yaml or ~/.enhance-ticket/config.yaml
ENHANCE_TICKET_CONFIG=./config.yaml

# Linear API Configuration
LINEAR_API_KEY=lin_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LINEAR_WEBHOOK_SECRET=lin_wh_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Linear OAuth App (optional - for OAuth flow)
LINEAR_CLIENT_ID=your-oauth-client-id
LINEAR_CLIENT_SECRET=your-oauth-client-secret

# Sandbox Agent Configuration (optional)
SANDBOX_TOKEN=your-sandbox-token

# User Guide Agent (optional)
GUIDE_USERNAME=user@example.com
GUIDE_PASSWORD=your-password
GUIDE_DOCS_BASE_URL=https://docs.example.com

# GitHub Webhook (optional - required only if you enable github cleanup on merge)
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Note: Claude Code uses OAuth login (no API key needed)
# Run `claude` once to authenticate if not already logged in
